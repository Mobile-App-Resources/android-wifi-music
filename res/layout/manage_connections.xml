<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <ListView android:id="@+id/connections"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    <include android:id="@+id/layout_add_connection"
            layout="@layout/connection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/connections" />

    <Button android:id="@+id/add_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_add_connection"
            android:layout_alignParentRight="true"
            android:text="@string/add_service_btn" />
</RelativeLayout>
